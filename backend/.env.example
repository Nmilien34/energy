# Server Configuration
PORT=5003
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/nrgflow

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# YouTube Extraction (Optional - for better reliability)
YT_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
YT_COOKIE=your-youtube-cookie-string
SKIP_PLAY_DL=false

# Redis Cache (Optional but highly recommended for optimization)
# Leave empty to disable Redis caching
# Examples:
# - Local: redis://localhost:6379
# - Remote: redis://username:password@hostname:port
# - Redis Cloud: rediss://default:password@hostname:port
REDIS_URL=

# AWS S3 Storage (Optional but highly recommended for optimization)
# Leave empty to disable S3 storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration (Advanced)
SEARCH_CACHE_TTL=3600
AUDIO_CACHE_TTL=21600
TRENDING_CACHE_TTL=43200
